  <title>5 Minute Countdown</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background: #0f172a;
      color: white;
      padding-top: 100px;
    }

    #countdown {
      font-size: 3rem;
      margin: 20px 0;
    }

    progress {
      width: 60%;
      height: 25px;
    }

    #popup {
      display: none;
      background: #1e293b;
      padding: 30px;
      border-radius: 10px;
      margin-top: 30px;
    }

    a {
      color: #38bdf8;
      font-size: 1.2rem;
    }
  </style>
</head>
<body>

  <h1> 5 Minute Countdown </h1>

  <!-- Timer Bar -->
  <progress id="timerBar" value="300" max="300"></progress>

  <!-- Time Text -->
  <div id="countdown">05:00</div>

  <!-- Popup -->
  <div id="popup">
    <h2> Timeâ€™s up!</h2>
    <a href="https://drive.google.com/drive/folders/1SAsP96d-rNZXWHZFetvHzqYsyATeU6VV?usp=drive_link" target="_blank">Click here</a>
  </div>

  <script>
    const TOTAL_TIME = 5 * 60; // 300 seconds
    let timeLeft = TOTAL_TIME;

    const countdownEl = document.getElementById("countdown");
    const popupEl = document.getElementById("popup");
    const timerBar = document.getElementById("timerBar");

    function updateCountdown() {
      if (timeLeft <= 0) {
        countdownEl.style.display = "none";
        timerBar.style.display = "none";
        popupEl.style.display = "block";
        clearInterval(timer);
        return;
      }

      const minutes = Math.floor(timeLeft / 60);
      const seconds = timeLeft % 60;

      countdownEl.textContent =
        `${String(minutes).padStart(2, "0")}:${String(seconds).padStart(2, "0")}`;

      timerBar.value = timeLeft;
      timeLeft--;
    }

    updateCountdown();
    const timer = setInterval(updateCountdown, 1000);
  </script>

</body>
